{
  "env": {
    "es2021": true,
    "node": true
  },
  "extends": ["airbnb-base", "prettier"],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "parser": "@babel/eslint-parser",
  "plugins": ["prettier"],
  "rules": {
    "no-alert": "off",
    "no-console": "off",
    "no-debugger": "off",
    "import/no-unresolved": "off",
    "import/extensions": "off",
    "no-unused-vars": ["warn", { "argsIgnorePattern": "next" }]
  }
}
